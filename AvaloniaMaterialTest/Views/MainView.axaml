		<Button 
			Content="Hello"
			Classes="accent"
		/>
		
		<Button 
			Content="Hello"
			Classes="light"
		/>
		
		<Button 
			Content="Hello"
			Classes="dark"
		/>
		
		<TextBox 
			UseFloatingWatermark="True"
			Text="Fred"
			assists:TextFieldAssist.Label="First Name" 
