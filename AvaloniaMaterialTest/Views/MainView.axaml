    <vm:MainViewModel />
  </Design.DataContext>

	<StackPanel Width="400" Spacing="24">
		<controls:Card Margin="16">
			<TextBlock Classes="Headline6" Text="{Binding Greeting}"/>
		</controls:Card>
		
		<Border BorderBrush="Black" BorderThickness="1" Background="Bisque">
			<Viewbox HorizontalAlignment="Right" Height="80" >
							<Viewbox
								Cursor="Hand"
								Tapped="Icon_OnTapped"
							>
								<avalonia:MaterialIcon Kind="ArrowDownDropCircleOutline" Foreground="Black" Background="Transparent"/>	
							</Viewbox>				
